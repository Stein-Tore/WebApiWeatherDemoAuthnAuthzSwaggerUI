{
   "AllowedHosts": "*",
   "Logging": {
      "LogLevel": {
         "Default": "Information",
         "Microsoft.AspNetCore": "Warning"
      }
   },
   "Serilog": {
      "MinimumLevel": {
         "Default": "Information",
         "Override": {
            "Microsoft.AspNetCore": "Warning",
            "WebApiWeatherDemoAuthnAutnzSwaggerUI.Authorization": "Debug"
         }
      },
      "WriteTo": [
         {
            "Name": "File",
            "Args": {
               "path": "c:/temp/logs/WebApiWeatherDemoAuthnAutnzSwaggerUI-log-.txt",
               "rollingInterval": "Day",
               "retainedFileCountLimit": 30
            }
         }
      ]
   },
   "Authorization": {
      "SameHostPolicy": {
         "AdditionalSameHostIPs": []
      }
   },
   "Authentication": {
      "BearerTokens": {
         "demo-token-12345": {
            "UserId": "user1",
            "Roles": [ "User" ],
            "AllowedIPs": []
         },
         "demo-token-67890": {
            "UserId": "user2",
            "Roles": [ "User", "DataReader" ],
            "AllowedIPs": []
         },
         "partner1-token-xyz": {
            "UserId": "partner1",
            "Roles": [ "Partner1", "DataReader" ],
            "AllowedIPs": [ "127.0.0.1", "::1" ]
         },
         "admin-token-123": {
            "UserId": "admin1",
            "Roles": [ "Admin", "DataWriter", "DataReader" ],
            "AllowedIPs": []
         }
      }
   }
}
