{
   "AllowedHosts": "*",
   "Logging": {
      "LogLevel": {
         "Default": "Information",
         "Microsoft.AspNetCore": "Warning"
      }
   },
   "Serilog": {
      "MinimumLevel": {
         "Default": "Information",
         "Override": {
            "Microsoft.AspNetCore": "Warning",
            "WebApiWeatherDemoAuthnAutnzSwaggerUI.Authentication": "Debug",
            "WebApiWeatherDemoAuthnAutnzSwaggerUI.Authorization": "Debug"
         }
      },
      "WriteTo": [
         {
            "Name": "Console"
         },
         {
            "Name": "File",
            "Args": {
               "path": "c:/temp/logs/WebApiWeatherDemoAuthnAutnzSwaggerUI-log-.txt",
               "rollingInterval": "Day",
               "retainedFileCountLimit": 30
            }
         }
      ]
   },
   "OpenApi": {
      "Enabled": false
   },
   "Authorization": {
      "IpPolicies": {
         "AdditionalSameHostIPs": [],
         "Policies": {
            "SameHost": {
               "IncludeSameHost": true,
               "AllowedIPs": []
            },
            "OpenApi": {
               "IncludeSameHost": true,
               "AllowedIPs": []
            },
            "Partner1": {
               "IncludeSameHost": false,
               "AllowedIPs": [ "127.0.0.1", "::1" ]
            },
            "DataWriter": {
               "IncludeSameHost": false,
               "AllowedIPs": [ "127.0.0.1", "::1" ]
            }
         }
      }
   },
   "Authentication": {
      "BearerTokens": {
         "demo-token-12345": {
            "UserId": "user1",
            "Roles": [ "User" ]
         },
         "demo-token-67890": {
            "UserId": "user2",
            "Roles": [ "User", "DataReader" ]
         },
         "partner1-token-xyz": {
            "UserId": "partner1",
            "Roles": [ "Partner1", "DataReader" ]
         },
         "admin-token-123": {
            "UserId": "admin1",
            "Roles": [ "Admin", "DataWriter", "DataReader" ]
         }
      }
   }
}
